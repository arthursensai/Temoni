generator client {
  provider = "prisma-client"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
  //ignore it
  url      = env("DATABASE_URL")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id            String   @id @default(cuid())
  discordId     String   @unique
  name          String?
  username      String?
  email         String?  @unique
  emailVerified Boolean? @default(false)
  image         String?
  bannerColor   String?

  allowedUser   AllowedUser? @relation(fields: [allowedUserId], references: [id])
  allowedUserId String?      @unique

  accounts Account[]
  sessions Session[]

  partnerLinkA PartnerLink? @relation("UserA")
  partnerLinkB PartnerLink? @relation("UserB")

  sender   TomorrowLetter[] @relation(name: "sender")
  receiver TomorrowLetter[] @relation(name: "receiver")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model AllowedUser {
  id        String  @id @default(cuid())
  discordId String  @unique
  email     String? @unique
  name      String?

  user User?
}

model PartnerLink {
  id String @id @default(cuid())

  userAId String @unique
  userBId String @unique

  userA User @relation("UserA", fields: [userAId], references: [id])
  userB User @relation("UserB", fields: [userBId], references: [id])

  createdAt DateTime @default(now())
}

model TomorrowLetter {
  id          String  @id @default(cuid())
  title       String
  content     String
  cover       String?
  receiveDate String
  receiveTime String

  saved_at DateTime @default(now())

  senderId   String
  receiverId String
  sender     User   @relation(name: "sender", fields: [senderId], references: [id])
  receiver   User   @relation(name: "receiver", fields: [receiverId], references: [id])
}
